---
// src/components/Stats.astro
---

<section class="stats-section section">
  <div class="container bg-surface-container stats-container">
    <div class="stats-grid">
      <div class="stat-item">
        <div class="stat-number text-primary">50+</div>
        <div class="stat-label">Research Papers</div>
      </div>
      
      <div class="stat-item vertical-divider">
        <div class="stat-number text-primary">10k+</div>
        <div class="stat-label">GitHub Stars</div>
      </div>
      
      <div class="stat-item vertical-divider">
        <div class="stat-number text-primary">20+</div>
        <div class="stat-label">Industry Partners</div>
      </div>
      
      <div class="stat-item vertical-divider">
        <div class="stat-number text-primary">4</div>
        <div class="stat-label">Global Labs</div>
      </div>
    </div>
  </div>
</section>

<style>
  .stats-section {
    padding-top: 40px;
    padding-bottom: 80px;
  }

  .stats-container {
    background-color: var(--md-sys-color-surface-container);
    border-radius: var(--md-sys-shape-corner-extra-large);
    padding: 64px 40px;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    text-align: center;
    position: relative;
  }

  .stat-item {
    position: relative;
  }

  .vertical-divider::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 1px;
    height: 60px;
    background-color: var(--md-sys-color-outline-variant);
  }

  .stat-number {
    font-size: var(--md-sys-typescale-display-medium-font-size);
    font-weight: 700;
    line-height: var(--md-sys-typescale-display-medium-line-height);
    margin-bottom: 8px;
  }

  .stat-label {
    font-size: var(--md-sys-typescale-title-large-font-size);
    font-weight: 400;
    color: var(--md-sys-color-on-surface-variant);
  }

  @media (max-width: 992px) {
    .stats-grid { grid-template-columns: repeat(2, 1fr); gap: 48px 0; }
    .stat-item:nth-child(3)::before { display: none; }
  }

  @media (max-width: 576px) {
    .stats-grid { grid-template-columns: 1fr; gap: 40px 0; }
    .vertical-divider::before { display: none; }
    .stats-container { padding: 48px 24px; }
  }
</style>
