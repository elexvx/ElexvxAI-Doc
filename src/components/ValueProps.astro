---
const { content } = Astro.props;
---
<section class="section">
  <div class="container">
    <h2 class="headline-large">{content.sectionTitle}</h2>
    <p class="body-large">{content.sectionDesc}</p>
    <div class="grid">{content.items.map((item: any) => (
      <article class="card-elevated vp-card"><h3>{item.title}</h3><p>{item.desc}</p></article>
    ))}</div>
  </div>
</section>
<style>.grid{display:grid;grid-template-columns:repeat(3,1fr);gap:16px;margin-top:20px}.vp-card{padding:20px}@media (max-width:900px){.grid{grid-template-columns:1fr}}</style>
