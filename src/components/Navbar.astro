---
// src/components/Navbar.astro
interface Props {
  showSearch?: boolean;
  isDocs?: boolean;
}

const { showSearch = false, isDocs = false } = Astro.props;
const pathname = new URL(Astro.request.url).pathname;

// Helper function to check if link is active
const isActive = (path: string) => {
  if (path === '/' && pathname === '/') return true;
  if (path !== '/' && pathname.startsWith(path)) return true;
  return false;
};
---

<nav class="navbar">
  <div class="container navbar-container">
    <div class="navbar-brand">
      <a href="/" class="logo-link">
        <span class="logo-text">ElexvxAI Lab</span>
      </a>
    </div>

    {showSearch && (
      <div class="docs-search-container">
        <button class="docs-search-btn">
          <span class="search-icon">
            <svg xmlns="http://www.w3.org/2000/svg" height="20" viewBox="0 -960 960 960" width="20" fill="currentColor"><path d="M784-120 532-372q-30 24-69 38t-83 14q-109 0-184.5-75.5T120-580q0-109 75.5-184.5T380-840q109 0 184.5 75.5T640-580q0 44-14 83t-38 69l252 252-56 56ZM380-400q75 0 127.5-52.5T560-580q0-75-52.5-127.5T380-760q-75 0-127.5 52.5T200-580q0 75 52.5 127.5T380-400Z"/></svg>
          </span>
          <span class="search-text">Search docs</span>
          <span class="search-shortcut">âŒ˜K</span>
        </button>
      </div>
    )}

    <div class="navbar-right">
      {!isDocs && (
        <ul class="nav-links">
          <li><a href="/" class:list={['nav-link', { active: isActive('/') }]}>Home</a></li>
          <li><a href="/blog" class:list={['nav-link', { active: isActive('/blog') }]}>Blog</a></li>
          <li><a href="/docs/getting-started/introduction" class:list={['nav-link', { active: isActive('/docs') }]}>Docs</a></li>
        </ul>
      )}

      <div class="nav-actions">
        <!-- Minimal SVGs for actions -->
        <button class="icon-btn" aria-label="Language">
          <svg xmlns="http://www.w3.org/2000/svg" height="20" viewBox="0 0 24 24" width="20" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path><path d="M2 12h20"></path></svg>
        </button>
        <button class="icon-btn" aria-label="GitHub">
          <svg xmlns="http://www.w3.org/2000/svg" height="20" viewBox="0 0 24 24" width="20" fill="currentColor"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
        </button>
        <button class="icon-btn theme-toggle" aria-label="Toggle Theme">
          <svg class="sun-icon" xmlns="http://www.w3.org/2000/svg" height="20" viewBox="0 0 24 24" width="20" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display: none;"><circle cx="12" cy="12" r="5"></circle><line x1="12" y1="1" x2="12" y2="3"></line><line x1="12" y1="21" x2="12" y2="23"></line><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line><line x1="1" y1="12" x2="3" y2="12"></line><line x1="21" y1="12" x2="23" y2="12"></line><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line></svg>
          <svg class="moon-icon" xmlns="http://www.w3.org/2000/svg" height="20" viewBox="0 0 24 24" width="20" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path></svg>
        </button>
      </div>
    </div>
  </div>
</nav>

<style>
  .navbar {
    background-color: var(--md-sys-color-surface);
    color: var(--md-sys-color-on-surface);
    border-bottom: 1px solid var(--md-sys-color-surface-dim);
    position: sticky;
    top: 0;
    z-index: 100;
  }
  
  .navbar-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 72px;
  }

  .navbar-brand .logo-link {
    text-decoration: none;
    /* Use explicit color that works in both global.css and docs.css contexts */
    color: inherit;
    display: flex;
    align-items: center;
  }

  /* Light mode logo color */
  .logo-text {
    color: #1a1a1a;
  }

  :root.dark .logo-text {
    color: #ffffff;
  }

  .logo-text {
    font-family: 'Google Sans', 'Roboto', sans-serif;
    font-size: 22px;
    font-weight: 700;
    display: flex;
    align-items: center;
    gap: 12px;
    white-space: nowrap;
  }

  /* Search Container */
  .docs-search-container {
    flex: 1; 
    display: flex;
    max-width: 480px;
    justify-content: center;
    padding: 0 24px;
    margin: 0 auto;
  }

  .docs-search-btn {
    display: flex;
    align-items: center;
    width: 100%;
    height: 40px;
    padding: 0 16px;
    background-color: var(--md-sys-color-surface-container);
    border: 1px solid var(--md-sys-color-outline-variant);
    border-radius: var(--md-sys-shape-corner-full);
    color: var(--md-sys-color-on-surface-variant);
    cursor: pointer;
    transition: background-color 0.2s, border-color 0.2s;
  }

  .docs-search-btn:hover {
    background-color: var(--md-sys-color-surface-container-highest);
  }

  .search-icon {
    display: flex;
    align-items: center;
    margin-right: 12px;
  }

  .search-text {
    font-size: var(--md-sys-typescale-label-large-font-size);
    flex: 1;
    text-align: left;
    color: var(--md-sys-color-on-surface-variant);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .search-shortcut {
    font-family: var(--docs-font-mono, monospace);
    font-size: 12px;
    padding: 4px 8px;
    border-radius: 4px;
    border: 1px solid var(--md-sys-color-outline-variant);
  }

  .navbar-right {
    display: flex;
    align-items: center;
    gap: 32px;
  }

  .nav-links {
    list-style: none;
    display: flex;
    gap: 8px;
    margin: 0;
    padding: 0;
  }

  .nav-link {
    text-decoration: none;
    color: var(--md-sys-color-on-surface-variant);
    font-size: var(--md-sys-typescale-label-large-font-size);
    font-weight: var(--md-sys-typescale-label-large-weight);
    transition: color 0.2s ease, background-color 0.2s ease;
    padding: 8px 16px;
    border-radius: var(--md-sys-shape-corner-small);
  }

  .nav-link:hover, .nav-link.active {
    color: var(--md-sys-color-primary);
    background-color: var(--md-sys-color-surface-container);
  }

  .nav-actions {
    display: flex;
    gap: 8px;
  }

  .icon-btn {
    background: transparent;
    border: none;
    color: var(--md-sys-color-on-surface-variant);
    width: 40px;
    height: 40px;
    border-radius: var(--md-sys-shape-corner-full);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: background-color 0.2s ease, color 0.2s ease;
  }

  .icon-btn:hover {
    background-color: var(--md-sys-color-surface-container-highest);
    color: var(--md-sys-color-on-surface);
  }

  /* Responsive Adjustments */
  @media (max-width: 900px) {
    .navbar-right {
      gap: 16px;
    }
  }

  @media (max-width: 768px) {
    .docs-search-container {
      display: none; /* Hide search box on small screens */
    }
    
    .nav-links {
      display: none; /* Hide main links on mobile */
    }
  }
</style>
