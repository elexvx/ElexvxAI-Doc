---
interface FooterColumn {
  title: string;
  links: string[];
}

interface FooterContent {
  brand: string;
  desc: string;
  columns: FooterColumn[];
  copyright: string;
}

const { content } = Astro.props as { content: FooterContent };
---

<footer class="footer">
  <div class="container footer-grid">
    <div>
      <h3>{content.brand}</h3>
      <p>{content.desc}</p>
    </div>
    {content.columns.map((column) => (
      <div>
        <h4>{column.title}</h4>
        <ul>
          {column.links.map((link) => <li>{link}</li>)}
        </ul>
      </div>
    ))}
  </div>
  <div class="container footer-bottom">© {new Date().getFullYear()} {content.brand}，{content.copyright}</div>
</footer>

<style>
  .footer { margin-top: 48px; border-top: 1px solid var(--md-sys-color-outline-variant); padding: 40px 0 20px; background: var(--md-sys-color-surface-container-low); }
  .footer-grid { display:grid; grid-template-columns: 2fr repeat(3,1fr); gap: 20px; }
  ul { list-style:none; padding:0; margin:10px 0 0; }
  li { color: var(--md-sys-color-on-surface-variant); margin: 8px 0; }
  .footer-bottom { margin-top: 20px; color: var(--md-sys-color-on-surface-variant); }
  @media (max-width: 900px) { .footer-grid { grid-template-columns: 1fr 1fr; } }
  @media (max-width: 640px) { .footer-grid { grid-template-columns: 1fr; } }
</style>
