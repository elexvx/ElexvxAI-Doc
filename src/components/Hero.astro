---
const { content } = Astro.props;
---
<section class="section">
  <div class="container hero-grid">
    <div>
      <span class="badge">{content.badge}</span>
      <h1 class="display-medium">{content.title}<br /><span class="text-primary">{content.highlight}</span></h1>
      <p class="body-large">{content.description}</p>
      <div class="hero-actions">
        <a href="#features" class="btn btn-filled">{content.actions.primary}</a>
        <a href="/docs/getting-started/introduction" class="btn btn-outlined">{content.actions.secondary}</a>
      </div>
      <div class="hero-tags">{content.attributes.map((item: string) => <span class="tag">{item}</span>)}</div>
    </div>
    <div class="hero-card">
      <div class="metric">99.8%</div>
      <div>{content.metricLabel}</div>
    </div>
  </div>
</section>
<style>
  .hero-grid{display:grid;grid-template-columns:1.3fr 1fr;gap:24px;align-items:center}.hero-actions{display:flex;gap:12px;margin:20px 0}.hero-tags{display:flex;gap:8px;flex-wrap:wrap}.tag{padding:6px 10px;background:var(--md-sys-color-surface-container);border-radius:999px}.hero-card{min-height:240px;border-radius:24px;background:linear-gradient(135deg,#e3f2fd,#d2e3fc);display:flex;flex-direction:column;justify-content:center;align-items:center}.metric{font-size:56px;font-weight:700}
  @media (max-width:900px){.hero-grid{grid-template-columns:1fr}.hero-card{min-height:180px}}
</style>
