---
const { posts, sectionTitle } = Astro.props;
---
<section>
  <h2>{sectionTitle}</h2>
  <div class="grid">{posts.map((post: any) => (
    <a href={`/blog/${post.slug}`} class="card-elevated post-card">
      <img src={post.image} alt={post.title} />
      <div class="body"><h3>{post.title}</h3><p>{post.excerpt}</p><small>{post.date} Â· {post.readTime}</small></div>
    </a>
  ))}</div>
</section>
<style>.grid{display:grid;grid-template-columns:repeat(3,1fr);gap:16px}.post-card{text-decoration:none;color:inherit;overflow:hidden}img{width:100%;height:180px;object-fit:cover}.body{padding:16px}@media (max-width:900px){.grid{grid-template-columns:1fr}}</style>
