---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';
import { loadYaml } from '../../lib/loadYaml';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map((entry) => ({ params: { slug: entry.slug }, props: { entry } }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
const content = await loadYaml<any>('blog.yaml');
---

<Layout title={`${entry.data.title} | ElexvxAI 博客`}>
  <Navbar content={content.navbar} />
  <main class="section">
    <article class="container post">
      <h1>{entry.data.title}</h1>
      <p class="meta">{entry.data.category} · {entry.data.date} · {entry.data.readTime}</p>
      <img class="hero" src={entry.data.image} alt={entry.data.title} />
      <div class="markdown-content"><Content /></div>
      <p class="author">{entry.data.author} · {content.post.authorRole}</p>
    </article>
  </main>
  <Footer content={content.footer} />
</Layout>

<style>
  .post{max-width:800px}.meta,.author{color:var(--md-sys-color-on-surface-variant)}.hero{width:100%;border-radius:12px;margin:20px 0}
</style>
